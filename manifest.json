{
  "manifest_version": 3,
  "name": "Life360 Chrome Extension",
  "version": "1.0",
  "description": "Use Life360 from anywhere!",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "1024": "icons/icon-1024.png"

  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png",
      "1024": "icons/icon-1024.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://*.life360.com/*"
  ]
}
